generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String?
  avatar      String?
  createdAt   DateTime @default(now())
  fishing     FishingReport[]
}

model FishingReport {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  location      String
  latitude      Float?
  longitude     Float?
  date          DateTime
  timeOfDay     String?
  fishSpecies   String[]
  tackle        String[]
  weather       Json?
  catchAmount   Float?
  catchDetails  Json?
  notes         String?
  photos        String[]
  isPublic      Boolean  @default(true)
  createdAt     DateTime @default(now())
}
